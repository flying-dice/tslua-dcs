{
	"name": "@flying-dice/tslua-http-api",
	"version": "0.1.0",
	"description": "LUA HTTP API Server written in Typescript Transpiled to lua using TypeScriptToLua",
	"keywords": [
		"lua",
		"http",
		"api"
	],
	"license": "ISC",
	"types": "./dist/index.d.ts",
	"main": "./dist/index",
	"scripts": {
		"build": "rimraf dist && tstl -p tsconfig.tstl.json",
		"build:watch": "rimraf dist && tstl --watch -p tsconfig.tstl.json",
		"dev": "cd dist && lua test-app.lua",
		"dev:watch": "nodemon",
		"build:docs": "typedoc",
		"test": "concurrently -k -s first \"npm run dev > .test-app.log\" \"jest --coverage\""
	},
	"nodemonConfig": {
		"verbose": true,
		"watch": [
			"dist"
		],
		"ext": "lua",
		"exec": "npm run dev"
	},
	"dependencies": {
		"@flying-dice/tslua-http": "0.1.0"
	},
	"devDependencies": {
		"@golevelup/ts-jest": "^0.4.0",
		"@types/jest": "^29.5.10",
		"@types/jest-when": "^3.5.5",
		"axios": "^1.6.2",
		"fengari": "^0.1.4",
		"fengari-interop": "^0.1.3",
		"jest": "^29.7.0",
		"jest-when": "^3.6.0",
		"lua-types": "^2.13.1",
		"ts-jest": "^29.1.1",
		"typescript": "^5.2.2",
		"typescript-to-lua": "^1.22.0"
	}
}
