{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "Node",
        "types": ["lua-types/5.4", "jest"],
        "strict": true,
        "outDir": "dist",
        "declaration": true
    },
    "tstl": {
        "luaLibImport": "inline",
        "sourceMapTraceback": true,
        "noResolvePaths": ["socket"]
    }
}