{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "format": "biome check --apply .",
    "format:ci": "biome ci .",
    "build": "lerna run build",
    "build:docs": "lerna run build:docs && typedoc",
    "build:all": "npm run format && npm run build && npm run build:docs",
    "pretest": "npm run build",
    "test": "lerna run test",
    "posttest": "npm run build:docs"
  },
  "devDependencies": {
    "@biomejs/biome": "1.3.3",
    "husky": "^8.0.0",
    "lerna": "^6.6.2",
    "rimraf": "^5.0.5",
    "tsx": "^4.4.0",
    "typedoc": "^0.25.3"
  }
}
